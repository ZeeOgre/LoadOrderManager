<Window x:Class="ZO.LoadOrderManager.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="150" Width="300">
    <StackPanel>
        <Label x:Name="lblQuestion" Margin="10"/>
        <TextBox x:Name="txtAnswer" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="10" Click="btnDialogOk_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
