<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Global Colors for Light and Dark Themes -->
    <Color x:Key="BackgroundColorLight">#FFFFFF</Color>
    <!-- Light Theme Background -->
    <Color x:Key="BackgroundColorDark">#333333</Color>
    <!-- Dark Theme Background -->
    <Color x:Key="ForegroundColorLight">#000000</Color>
    <!-- Light Theme Foreground (Text) -->
    <Color x:Key="ForegroundColorDark">#FFFFFF</Color>
    <!-- Dark Theme Foreground (Text) -->

    <!-- Expander Path Color for TreeView -->
    <Color x:Key="ExpanderPathColorLight">#000000</Color>
    <!-- Light Theme Expander Color -->
    <Color x:Key="ExpanderPathColorDark">#FFFFFF</Color>
    <!-- Dark Theme Expander Color -->

    <!-- Control Borders -->
    <Color x:Key="BorderColorLight">#CCCCCC</Color>
    <!-- Light Theme Border -->
    <Color x:Key="BorderColorDark">#3A3A3A</Color>
    <!-- Dark Theme Border -->
</ResourceDictionary>
