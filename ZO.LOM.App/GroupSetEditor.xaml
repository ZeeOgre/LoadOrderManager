<metro:MetroWindow x:Class="ZO.LoadOrderManager.GroupSetEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mahappsIcons="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Style="{StaticResource MaterialDesignWindow}"
        xmlns:local="clr-namespace:ZO.LoadOrderManager"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="GroupSet Editor" Height="750" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Mod Groups ListBox -->
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
            <!-- Plugins ListBox -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5*"/>
            <!-- LoadOuts ListBox -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Row 0-->
        <TextBlock Text="GroupSet ID:" FontWeight="Bold" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding ActiveGroupSet.GroupSetID}" IsReadOnly="True" Background="LightGray" Foreground="Black" IsTabStop="False" Width="50" Margin="5,0,0,10" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1"/>
        <CheckBox Content="Favorite:" IsChecked="{Binding ActiveGroupSet.IsFavorite}" Grid.Row="0" Grid.Column="1" Margin="5,0,0,10" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Text="Flags:" FontWeight="Bold" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="10,0,0,5"/>

        <!-- Flags on Row 1 and 2 -->
        <CheckBox Content="Default Group" IsChecked="{Binding ActiveGroupSet.IsDefaultGroup}" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" Margin="25,0,0,5"/>
        <CheckBox Content="Read Only" IsChecked="{Binding ActiveGroupSet.IsReadOnly}" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right" Margin="0,0,15,5"/>
        <CheckBox Content="Ready to Load" IsChecked="{Binding ActiveGroupSet.IsReadyToLoad}" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" Margin="25,0,25,5"/>
        <CheckBox Content="Files Loaded" IsChecked="{Binding ActiveGroupSet.AreFilesLoaded}" Grid.Row="2" Grid.Column="2" HorizontalAlignment="right" Margin="5"/>

        <!-- GroupSet Name - Row 1 -->
        <TextBlock Text="GroupSet Name:" FontWeight="Bold" Grid.Row="2" Grid.Column="0"/>
        <TextBox Name="TBGroupSetName" Text="{Binding ActiveGroupSet.GroupSetName}" Width="200" Margin="5,0,0,10" Grid.Row="2" Grid.Column="1"/>

        <!-- Mod Groups -->
        <TextBlock Text="Mod Groups:" FontWeight="Bold" Grid.Row="3" Grid.Column="0" Margin="0,10,0,0"/>
        <ListBox Name="ModGroupsListBox" ItemsSource="{Binding ActiveGroupSet.ModGroups}" DisplayMemberPath="GroupName" Height="100" Margin="0,0,0,10" Grid.ColumnSpan="3" Grid.Row="4" MouseRightButtonDown="ModGroups_MouseRightButtonDown">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Edit" Click="EditModGroup_Click" />
                    <MenuItem Header="Remove" Click="RemoveModGroup_Click" />
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
        <Button Content="Add Mod Group" Command="{Binding AddModGroupCommand}" Width="150" HorizontalAlignment="Right" Margin="0,0,0,10" Grid.Row="5" Grid.Column="2"/>

        <!-- Plugins -->
        <TextBlock Text="Plugins:" FontWeight="Bold" Grid.Row="6" Grid.Column="0" Margin="0,10,0,0"/>
        <ListBox Name="PluginsListBox" ItemsSource="{Binding ActiveGroupSet.Plugins}" DisplayMemberPath="PluginName" Height="100" Margin="0,0,0,10" Grid.ColumnSpan="3" Grid.Row="7" MouseRightButtonDown="Plugins_MouseRightButtonDown">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Edit" Click="EditPlugin_Click" />
                    <MenuItem Header="Remove" Click="RemovePlugin_Click" />
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
        <Button Content="Add Plugin" Command="{Binding AddPluginCommand}" Width="150" HorizontalAlignment="Right" Margin="0,0,0,10" Grid.Row="8" Grid.Column="2"/>

        <!-- LoadOuts -->
        <TextBlock Text="LoadOuts:" FontWeight="Bold" Grid.Row="9" Grid.Column="0" Margin="0,10,0,0"/>

        <ListBox Name="LoadOutsListBox" ItemsSource="{Binding ActiveGroupSet.LoadOuts}" DisplayMemberPath="Name" Height="100" Margin="0,0,0,10" Grid.ColumnSpan="3" Grid.Row="10">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Edit" Click="EditLoadOut_Click"/>
                    <MenuItem Header="Delete" Click="RemoveLoadOut_Click"/>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
        <Button Content="Add LoadOut" Command="{Binding AddLoadOutCommand}" Width="150" HorizontalAlignment="Right" Margin="0,0,0,10" Grid.Row="11" Grid.Column="2"/>

        <!-- Save Button -->
        <Button Content="Save" Command="{Binding SaveCommand}" Width="100" HorizontalAlignment="Center" Margin="0,20,0,0" Grid.Row="12" Grid.ColumnSpan="3"/>
        <!-- Row 12: Record Browser -->
        <StackPanel Grid.Row="13" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <!-- First Record Button -->
            <Button Command="{Binding FirstRecordCommand}" Style="{StaticResource MahApps.Styles.Button.Circle}" Width="30" Height="30" Margin="5">
                <mahappsIcons:PackIconMaterial Kind="SkipBackward" />
            </Button>
            <!-- Previous Record Button -->
            <Button Command="{Binding PreviousRecordCommand}" Style="{StaticResource MahApps.Styles.Button.Circle}" Width="30" Height="30" Margin="5">
                <mahappsIcons:PackIconMaterial Kind="ChevronLeft" />
            </Button>
            <!-- Current Record Info -->
            <TextBlock Text="{Binding CurrentRecordInfo}" VerticalAlignment="Center" Margin="10,0" />
            <!-- Next Record Button -->
            <Button Command="{Binding NextRecordCommand}" Style="{StaticResource MahApps.Styles.Button.Circle}" Width="30" Height="30" Margin="5">
                <mahappsIcons:PackIconMaterial Kind="ChevronRight" />
            </Button>
            <!-- Last Record Button -->
            <Button Command="{Binding LastRecordCommand}" Style="{StaticResource MahApps.Styles.Button.Circle}" Width="30" Height="30" Margin="5">
                <mahappsIcons:PackIconMaterial Kind="SkipForward" />
            </Button>
            <!-- New Record Button -->
            <Button Command="{Binding NewRecordCommand}" Style="{StaticResource MahApps.Styles.Button.Circle}" Width="30" Height="30" Margin="10,5">
                <mahappsIcons:PackIconMaterial Kind="PlusBox" />
            </Button>
            <!-- Delete Record Button -->
            <Button Command="{Binding DeleteRecordCommand}" Style="{StaticResource MahApps.Styles.Button.Circle}" Width="30" Height="30" Margin="5">
                <mahappsIcons:PackIconMaterial Kind="DeleteForever" />
            </Button>
        </StackPanel>

    </Grid>
</metro:MetroWindow>