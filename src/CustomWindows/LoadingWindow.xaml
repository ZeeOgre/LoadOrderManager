<metro:MetroWindow x:Class="ZO.LoadOrderManager.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        Style="{StaticResource MaterialDesignWindow}"
        xmlns:local="clr-namespace:ZO.LoadOrderManager"
        Title="Loading" Height="200" Width="400">
    <Grid>
        <ProgressBar x:Name="ProgressBar" Minimum="0" Maximum="100" Height="30" VerticalAlignment="Top" Margin="10"/>
        <Label x:Name="MessageLabel" Content="Initializing..." VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</metro:MetroWindow>
